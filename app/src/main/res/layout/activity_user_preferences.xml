<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bg_transaparent20"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/view10"
            android:layout_width="0dp"
            android:layout_height="110dp"
            android:background="@drawable/bg_preferences"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="Make sure the contents are correct"
            android:textStyle="bold"
            android:layout_marginHorizontal="15dp"
            android:maxLines="2"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/view10" />

        <TextView
            android:id="@+id/textView22"
            android:layout_width="0dp"
            android:layout_marginHorizontal="15dp"
            android:layout_height="wrap_content"
            android:text="So that the results are accurate"
            android:maxLines="2"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView21" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="36dp"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintTop_toBottomOf="@id/view10"
            android:orientation="vertical">
            <TextView
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weight goal :"/>
            <Spinner
                android:id="@+id/spinerWeight"
                android:layout_marginTop="10dp"
                android:background="@drawable/spiner_item_cus"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView

                        android:textSize="18sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Height :"/>
                    <EditText
                        android:inputType="number"
                        android:id="@+id/etHeight"
                        android:paddingLeft="5dp"
                        android:hint="Cm"
                        android:textColor="@color/black"
                        android:layout_marginTop="5dp"
                        android:layout_width="114dp"
                        android:layout_height="50dp"
                        android:background="@drawable/bg_white_round_5"/>

                </LinearLayout>
                <LinearLayout
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:textSize="18sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Weight :"/>
                    <EditText
                        android:inputType="number"
                        android:id="@+id/etWeight"
                        android:paddingLeft="5dp"
                        android:hint="Kg"
                        android:textColor="@color/black"
                        android:layout_marginTop="5dp"
                        android:layout_width="114dp"
                        android:layout_height="50dp"
                        android:background="@drawable/bg_white_round_5"/>
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
            <TextView
                android:textSize="18sp"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gender :"/>
            <RadioGroup
                android:id="@+id/gender_radio_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/male_radio_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Male" />

                <RadioButton
                    android:id="@+id/female_radio_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Female" />
            </RadioGroup>

            <TextView
                android:textSize="18sp"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Birthdate :"/>
            <TextView
                android:gravity="start|center_vertical"
                tools:text="12-05-2023"
                android:paddingLeft="5dp"
                android:id="@+id/date"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/bg_white_round_5"
                app:drawableLeftCompat="@drawable/ic_date" />
            <TextView
                android:textSize="18sp"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Activity level :"/>
            <Spinner
                android:paddingLeft="5dp"
                android:id="@+id/spinerLevel"
                android:paddingVertical="5dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/spiner_item_cus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="18sp"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Riwayat Penyakit :"/>
            <!--        checkbox alergi-->
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <CheckBox
                        android:paddingEnd="5dp"
                        android:id="@+id/cbDiabetes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Diabetes" />
                    <CheckBox
                        android:paddingEnd="5dp"
                        android:id="@+id/cbObesitas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Obesity" />
                    <CheckBox
                        android:paddingEnd="5dp"
                        android:id="@+id/cbJantung"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Heart" />
                    <CheckBox
                        android:paddingEnd="5dp"
                        android:id="@+id/cbHipertensi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="hypertension" />
                </TableRow>
            </TableLayout>
            <!--        checkbox alergi-->
            <TextView
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Favorite foods :"/>
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <CheckBox
                        android:paddingEnd="5dp"
                        android:id="@+id/cbAyam"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ayam" />
                    <CheckBox
                        android:paddingEnd="5dp"
                        android:id="@+id/cbGoreng"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Goreng" />
                    <CheckBox
                        android:paddingEnd="5dp"
                        android:id="@+id/cbIkan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ikan" />
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <CheckBox
                        android:paddingEnd="5dp"
                        android:id="@+id/cbNasi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nasi" />
                    <CheckBox
                        android:paddingEnd="5dp"
                        android:id="@+id/cbKue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kue" />
                    <CheckBox
                        android:paddingEnd="5dp"
                        android:id="@+id/cbTahu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tahu" />
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <CheckBox
                        android:paddingEnd="5dp"
                        android:id="@+id/cbSambal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sambal" />
                    <CheckBox
                        android:paddingEnd="5dp"
                        android:id="@+id/cbBakar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bakar" />
                    <CheckBox
                        android:paddingEnd="5dp"
                        android:id="@+id/cbMie"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mie" />
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <CheckBox
                        android:paddingEnd="5dp"
                        android:id="@+id/cbTelur"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Telur" />
                    <CheckBox
                        android:paddingEnd="5dp"
                        android:id="@+id/cbDaging"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Daging" />
                    <CheckBox
                        android:paddingEnd="5dp"
                        android:id="@+id/cbTumis"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tumis" />
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <CheckBox
                        android:paddingEnd="5dp"
                        android:id="@+id/cbUdang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Udang" />
                    <CheckBox
                        android:paddingEnd="5dp"
                        android:id="@+id/cbSayur"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sayur" />
                    <CheckBox
                        android:paddingEnd="5dp"
                        android:id="@+id/cbPisang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pisang" />
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <CheckBox
                        android:paddingEnd="5dp"
                        android:id="@+id/cbEs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Es" />
                    <CheckBox
                        android:paddingEnd="5dp"
                        android:id="@+id/cbSapi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sapi" />
                    <CheckBox
                        android:paddingEnd="5dp"
                        android:id="@+id/cbPuding"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Puding" />
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <CheckBox
                        android:paddingEnd="5dp"
                        android:id="@+id/cbBolu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bolu" />
                    <CheckBox
                        android:paddingEnd="5dp"
                        android:id="@+id/cbBumbu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bumbu" />
                </TableRow>
            </TableLayout>
            <Button
                android:id="@+id/btnSaveUserPreference"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                app:backgroundTint="@null"
                android:background="@drawable/bg_green_round15"
                android:textSize="25sp"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:text="Save"/>
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
