<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivDialog"
        android:contentDescription="image sukses"
        android:layout_marginTop="40dp"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/undraw_completed_03xt"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/tvPertama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Terima Kasih!"
        android:textSize="16dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvKedua"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/poppins_semibold"
        android:textSize="14dp"
        android:text="Register sukses"/>
    <Button
        android:layout_marginHorizontal="20dp"
        android:id="@+id/btn_close"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Close"
        android:textStyle="bold"
       />
</LinearLayout>