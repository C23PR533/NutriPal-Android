                    android:gravity="right"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/tvKalsium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0" />
            </LinearLayout>

            <LinearLayout
